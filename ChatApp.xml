<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:qk="https://getquicker.net"
        Width="550"
        Height="650"
        AllowsTransparency="True"
        Background="#222222"
        BorderBrush="#333333"
        BorderThickness="1"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <TextBlock Text="✕" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MinimizeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <TextBlock Text="–" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ExpandButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <TextBlock Text="⊞" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#03A67D"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <TextBlock Text="⚙" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#03A67D"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00AA88"/>
            <Setter Property="BorderBrush" Value="#00AA88"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0"
                                CornerRadius="5">
                            <TextBlock Text="发送" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00A8FF"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="8" Background="#222222" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏和控制按钮 -->
            <Grid Grid.Row="0" Background="#222222" Name="TitleBar">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button Name="BtnSettings" Style="{StaticResource SettingsButtonStyle}" Margin="0,0,10,0"/>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" Foreground="#03A67D" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding [WindowTitle]}" Foreground="#CCCCCC" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="BtnMinimize" Style="{StaticResource MinimizeButtonStyle}"/>
                    <Button Name="BtnExpand" Style="{StaticResource ExpandButtonStyle}"/>
                    <Button Name="BtnClose" Style="{StaticResource CloseButtonStyle}"/>
                </StackPanel>
            </Grid>
            
            <!-- 主标题 -->
            <TextBlock Grid.Row="1" Text="{Binding [MainPrompt]}" Foreground="White" FontSize="24" 
                       HorizontalAlignment="Center" Margin="0,30,0,20"/>
            
            <!-- 功能按钮区域 -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,0,20,10">
                <StackPanel>
                    <!-- 功能按钮行1 -->
                    <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,10">
                        <Button Style="{StaticResource ActionButtonStyle}" Name="BtnCreateImage">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE91B;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="创建图片"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}" Name="BtnAnalyzeData">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="分析数据"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}" Name="BtnSurpriseMe">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="给我惊喜"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                    
                    <!-- 功能按钮行2 -->
                    <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,10">
                        <Button Style="{StaticResource ActionButtonStyle}" Name="BtnAnalyzeImage">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xEB9F;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                                <TextBlock Text="分析图片"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}" Name="BtnMore">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="更多"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                    
                    <!-- 聊天消息区域 -->
                    <ScrollViewer Name="MessageScrollViewer" Height="350" Margin="0,20,0,0">
                        <StackPanel Name="MessageContainer">
                            <!-- 消息内容会在C#代码中动态添加 -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
            
            <!-- 调试信息区域 -->
            <TextBlock Grid.Row="3" Name="TxtDebugInfo" Foreground="#888888" FontSize="10" 
                       Margin="20,0,20,5" TextWrapping="Wrap" Height="30"/>
            
            <!-- 底部输入区域 -->
            <Grid Grid.Row="4" Background="#2A2A2A" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Name="BtnAttachment" Background="Transparent" BorderBrush="Transparent" 
                        Foreground="#888888" Margin="15,10,0,10" Width="30" Height="30">
                    <TextBlock Text="&#xE723;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                </Button>
                
                <TextBox Grid.Column="1" Name="TxtInput" Style="{StaticResource InputBoxStyle}" 
                         Margin="10,10,10,10" MinHeight="40" MaxHeight="80" VerticalContentAlignment="Center"
                         Text="{Binding [InputText], Mode=TwoWay}"/>
                
                <Button Grid.Column="2" Name="BtnSend" Style="{StaticResource SendButtonStyle}" Margin="0,0,15,0"/>
            </Grid>
            
            <!-- 设置面板（初始隐藏） -->
            <Border Grid.RowSpan="5" Name="SettingsPanel" Background="#222222" BorderBrush="#333333" 
                   BorderThickness="1" CornerRadius="8" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="模型设置" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <TextBlock Text="模型名称" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox Name="TxtModelName" Text="{Binding [ModelName]}" Background="#333333" Foreground="White" 
                                 BorderBrush="#444444" Padding="8" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="API密钥" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox Name="TxtApiKey" Text="{Binding [ApiKey]}" Background="#333333" Foreground="White" 
                                 BorderBrush="#444444" Padding="8" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="API基础URL" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox Name="TxtBaseUrl" Text="{Binding [BaseUrl]}" Background="#333333" Foreground="White" 
                                 BorderBrush="#444444" Padding="8" Margin="0,0,0,15"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Name="BtnCancelSettings" Content="取消" Background="#444444" Foreground="White" 
                                Padding="15,8" Margin="0,0,10,0"/>
                        <Button Name="BtnSaveSettings" Content="保存" Background="#03A67D" Foreground="White" 
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>